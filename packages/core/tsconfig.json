{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "removeComments": true,
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "strict": true,
      "jsx": "react",
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/_old/fields/tests"]
  }